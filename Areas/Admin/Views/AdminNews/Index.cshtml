
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.EntityFramework.NEWS>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DANH SÁCH TIN TỨC</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th style="text-align:center">News ID</th>
                                    <th style="text-align:center">Title</th>
                                    <th style="text-align:center">Image</th>
                                    <th style="text-align:center">Create Date</th>
                                    <th style="text-align:center">Create By</th>
                                    <th style="text-align:center">Tag</th>
                                    <th style="text-align:center">Decription</th>
                                    <th style="text-align:center">Detail</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td style="text-align:center">@item.NEW_ID</td>
                                        <td style="width:100px">@item.NEW_TITLE</td>
                                        <td style="width:100px"><img style="width:100px;height:100px" src="/Image/HinhSanPham/images/News/@item.IMAGE" /> </td>
                                        <td class="center" style="text-align:center">@item.CREATEDAY</td>
                                        <td style="text-align:center">@item.CREATEBY</td>
                                        <td style="text-align:center">@item.TAG</td>
                                        <td style="width:150px">@item.DECRIPTION</td>
                                        <td>@item.DETAIL</td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", "AdminNews", new { id = item.NEW_ID }, new { @class = "btn btn-danger" })
                                            <br />
                                            @Html.ActionLink("Edit", "Edit", "AdminNews", new { id = item.NEW_ID }, new { @class = "btn btn-warning" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


