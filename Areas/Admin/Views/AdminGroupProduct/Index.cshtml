@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.EntityFramework.GROUPPRODUCT>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DANH SÁCH NHÓM SẢN PHẨM</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Group ID</th>
                                    <th style="text-align:center">Name Group</th>
                                    <th style="text-align:center">Image</th>
                                    <th style="text-align:center">Meta Title</th>
                                    <th style="text-align:center">Detail</th>
                                    <th style="text-align:center">Status</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td style="text-align:center;width:70px">@item.GROUP_PRODUCT_ID</td>
                                        <td style="width:180px">@item.NAME</td>
                                        <td style="width:100px"><img style="width:100px;height:100px" src="/Image/HinhSanPham/images/GroupProduct/@item.IMAGES" /></td>
                                        <td class="center" style="text-align:center;width:180px">@item.MetaTitle</td>
                                        <td style="width:600px">@item.DETAIL</td>
                                        <td style="text-align:center;width:100px">@item.STATUS</td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", "AdminGroupProduct", new { id = item.GROUP_PRODUCT_ID }, new { @class = "btn btn-danger" })
                                            <br />
                                            @Html.ActionLink("Edit", "Edit", new { id = item.GROUP_PRODUCT_ID }, new { @class = "btn btn-warning" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

