@model Model.EntityFramework.PERMISSION

@{
    ViewBag.Title = "EditPer";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">SỬA THÔNG TIN QUYỀN</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    THÔNG TIN CHI TIẾT
                </div>
                <div class="panel-body">
                    <div class="row" style="width:70%; margin-left:30px">
                        @using (Html.BeginForm("EditPer", "AdminRole", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">
                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group input-group">
                                    <span class="input-group-addon">PermissionID</span>
                                    @Html.TextBoxFor(model => model.PERMISSION_ID, new { @class = "form-control", @readonly = "readonly" })
                                    @Html.ValidationMessageFor(model => model.PERMISSION_ID, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">PermissionName</span>
                                    @Html.TextBoxFor(model => model.NAME_PERMISSION, new { @class = "form-control", @type = "text", @autofocus = "autofocus", @placeholder = "Nhập tên quyền" })
                                    @Html.ValidationMessageFor(model => model.NAME_PERMISSION, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        <input type="submit" value="Save" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->