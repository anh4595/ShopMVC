@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.EntityFramework.PRODUCT>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DANH SÁCH SẢN PHẨM</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                 
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Product ID</th>
                                    <th style="text-align:center">Name Product</th>
                                    <th style="text-align:center">Image</th>
                                    <th style="text-align:center">Discount Price</th>
                                    <th style="text-align:center">Create Date</th>
                                    <th style="text-align:center">Detail</th>
                                    <th style="text-align:center">Status</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                <tr class="odd gradeX">
                                    <td style="text-align:center;width:50px">@item.PRODUCT_ID</td>
                                    <td style="width:130px">@item.NAME</td>
                                    <td style="width:100px"><img style="width:100px;height:100px" src="/Image/HinhSanPham/images/Product/@item.IMAGE_LINK" /></td>
                                    <td class="center" style="text-align:center">$@item.DISCOUNT_PRICE</td>
                                    <td style="text-align:center">@item.CREATED_DATE</td>
                                    <td>@item.DETAIL</td>
                                    <td style="text-align:center;width:70px">@item.STATUS</td>
                                    <td>
                                        @Html.ActionLink("Delete", "Delete", "AdminProduct", new { id = item.PRODUCT_ID }, new { @class = "btn btn-danger" })
                                        <br />
                                        @Html.ActionLink("Edit", "Edit", new { id = item.PRODUCT_ID }, new { @class = "btn btn-warning" })
                                    </td>
                                </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
               
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>
