@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.EntityFramework.SLIDE>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DANH SÁCH SLIDE TRANG CHỦ</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">

                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th style="text-align:center">ID</th>
                                    <th style="text-align:center">Name Slide</th>
                                    <th style="text-align:center">Image</th>
                                    <th style="text-align:center">Status</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td style="text-align:center;width:50px">@item.ID</td>
                                        <td style="width:330px">@item.NAME</td>
                                        <td style="width:300px"><img style="width:100px;height:100px;text-align:center" src="/Image/HinhSanPham/images/Slide/@item.IMAGE" /></td>
                                        <td style="text-align:center">@item.STATUS</td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", new { id = item.ID }, new { @class = "btn btn-danger" })
                                            <br />
                                            @Html.ActionLink("Edit", "Edit", "AdminSlide", new { id = item.ID }, new { @class = "btn btn-warning" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->

            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>


