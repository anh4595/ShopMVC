@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@model IEnumerable<Model.EntityFramework.TAG>

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">DANH SÁCH THẺ TAG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    @Html.ActionLink("Thêm mới", "Create", null, new { @class = "btn btn-success" })
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <div class="dataTable_wrapper">
                        <table class="table table-striped table-bordered table-hover" id="myTable">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Tag ID</th>
                                    <th style="text-align:center">Name Tag</th>
                                    <th style="text-align:center">Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr class="odd gradeX">
                                        <td style="text-align:center;width:100px">@item.TAG_ID</td>
                                        <td style="width:580px">@item.NAME_TAG</td>
                                        <td>
                                            @Html.ActionLink("Delete", "Delete", "AdminTagProduct", new { id = item.TAG_ID }, new { @class = "btn btn-danger" })
                                            <br />
                                            @Html.ActionLink("Edit", "Edit", "AdminTagProduct", new { id = item.TAG_ID }, new { @class = "btn btn-warning" })
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
</div>

