@model Model.EntityFramework.CUSTOMER

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">THÊM MỚI KHÁCH HÀNG</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    THÔNG TIN CHI TIẾT
                </div>
                <div class="panel-body">
                    <div class="row" style="width:70%; margin-left:30px">
                        @using (Html.BeginForm("Create", "AdminCustomer", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                                <div class="form-group input-group">
                                    <span class="input-group-addon">FullName</span>
                                    @Html.TextBoxFor(model => model.NAME, new { @class = "form-control", @placeholder = "Nhập tên khách hàng", @autofocus = "autofocus", @type = "text" })
                                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Username</span>
                                    @Html.TextBoxFor(model => model.USERNAME, new { @class = "form-control", @placeholder = "Tài khoản đăng nhập", @type = "text" })
                                    @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Password</span>
                                    @Html.TextBoxFor(model => model.PASSWORD, new { @class = "form-control", @placeholder = "Mật khẩu đăng nhập", @type = "password" })
                                    @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Phone</span>
                                    @Html.TextBoxFor(model => model.PHONE, new { @class = "form-control", @placeholder = "Số điện thoại", @type = "number", @min = "0" })
                                    @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Address</span>
                                    @Html.TextBoxFor(model => model.ADDRESS, new { @class = "form-control", @placeholder = "Địa chỉ khách hàng", @type = "text" })
                                    @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Mail</span>
                                    @Html.TextBoxFor(model => model.MAIL, new { @class = "form-control", @placeholder = "Tài khoản email", @type = "email" })
                                    @Html.ValidationMessageFor(model => model.MAIL, "", new { @class = "text-danger" })

                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        @Html.ActionLink("Back to List", "index", "AdminCustomer", new { @class = "btn btn-primary" })
                                        <input type="submit" value="Create" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
