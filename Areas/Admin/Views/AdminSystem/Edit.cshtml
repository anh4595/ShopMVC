@model Model.EntityFramework.ADMIN

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
    var db = new Model.EntityFramework.ShopOnlineDbContext();
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">SỬA THÔNG TIN ADMIN</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    THÔNG TIN CHI TIẾT
                </div>
                <div class="panel-body">
                    <div class="row" style="width:70%; margin-left:30px">
                        @using (Html.BeginForm("Edit", "AdminSystem", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()

                            <div class="form-horizontal">

                                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                @Html.HiddenFor(model => model.ADMIN_ID)

                                <div class="form-group input-group">
                                    <span class="input-group-addon">FullName</span>
                                    @Html.TextBoxFor(model => model.NAME, new { @class = "form-control", @autofocus = "autofocus", @type = "text", @placeholder = "Nhập họ tên quản trị viên" })
                                    @Html.ValidationMessageFor(model => model.NAME, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Address</span>
                                    @Html.TextBoxFor(model => model.ADDRESS, new { @class = "form-control", @type = "text", @placeholder = "Nhập địa chỉ quản trị viên" })
                                    @Html.ValidationMessageFor(model => model.ADDRESS, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Phone</span>
                                    @Html.TextBoxFor(model => model.PHONE, new { @class = "form-control", @type = "text", @placeholder = "Nhập số điện thoại quản trị viên" })
                                    @Html.ValidationMessageFor(model => model.PHONE, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Email</span>
                                    @Html.TextBoxFor(model => model.EMAIL, new { @class = "form-control", @type = "text", @placeholder = "Nhập email quản trị viên" })
                                    @Html.ValidationMessageFor(model => model.EMAIL, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Username</span>
                                    @Html.TextBoxFor(model => model.USERNAME, new { @class = "form-control", @type = "text", @placeholder = "Nhập tên tài khoản đăng nhập" })
                                    @Html.ValidationMessageFor(model => model.USERNAME, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group input-group">
                                    <span class="input-group-addon">Password</span>
                                    @Html.TextBoxFor(model => model.PASSWORD, new { @class = "form-control", @placeholder = "Nhập mật khẩu đăng nhập", @type = "password" })
                                    @Html.ValidationMessageFor(model => model.PASSWORD, "", new { @class = "text-danger" })
                                </div>


                                <div class="form-group input-group">
                                    <span class="input-group-addon">Permission</span>
                                    @Html.DropDownListFor(model => model.GROUP_ID, db.ADMINGROUPs.Select(x => new SelectListItem { Text = x.NAME, Value = x.GROUP_ID }), new { @class = "form-control", @type = "text", @placeholder = "Nhập tên tài khoản đăng nhập" })
                                    @Html.ValidationMessageFor(model => model.GROUP_ID, "", new { @class = "text-danger" })
                                </div>

                                <div class="form-group">
                                    <div class="checkbox">
                                        <label>
                                            @Html.CheckBoxFor(model => model.STATUS, new { htmlAttributes = new { @class = "form-control" } })
                                            @Html.ValidationMessageFor(model => model.STATUS, "", new { @class = "text-danger" })
                                            Status
                                        </label>
                                    </div>
                                </div>

                                <div class="form-group">
                                    <div class="col-md-offset-2 col-md-10">
                                        @Html.ActionLink("Back to List", "index", "AdminSystem", new { @class = "btn btn-primary" })
                                        <input type="submit" value="Save" class="btn btn-success" />
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- /#page-wrapper -->
