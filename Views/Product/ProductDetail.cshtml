@{
    ViewBag.Title = "ProductDetail";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var moreImage = ViewBag.MoreImage;
}

@model Model.EntityFramework.PRODUCT


<link href="~/Assets/UI/Detail/css/bootstrap.css" rel="stylesheet" type="text/css" media="all" />
<!--theme-style-->
<link href="~/Assets/UI/Detail/css/style.css" rel="stylesheet" type="text/css" media="all" />
<link rel="stylesheet" href="~/Assets/UI/Detail/css/etalage.css" type="text/css" media="all" />
<!--//theme-style-->
<script type="application/x-javascript"> addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } </script>
<!--fonts-->
<link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700,800' rel='stylesheet' type='text/css'>
<!--//fonts-->
<script src="~/Assets/UI/Detail/js/jquery.min.js"></script>

<script src="~/Assets/UI/Detail/js/jquery.etalage.min.js"></script>
<script>
    jQuery(document).ready(function ($) {

        $('#etalage').etalage({
            thumb_image_width: 300,
            thumb_image_height: 400,
            source_image_width: 900,
            source_image_height: 950,
            show_hint: true,
            click_callback: function (image_anchor, instance_id) {
                alert('Callback example:\nYou clicked on an image with the anchor: "' + image_anchor + '"\n(in Etalage instance: "' + instance_id + '")');
            }
        });

    });
</script>

<!-- SCROLL TOP BUTTON -->
<a class="scrollToTop" href="#"><i class="fa fa-chevron-up"></i></a>
<!-- END SCROLL TOP BUTTON -->
<!-- catg header banner section -->
<section id="aa-catg-head-banner">
    <img src="~/Image/Slide/fashion-header-bg-8.jpg" alt="fashion img">
    <div class="aa-catg-head-banner-area">
        <div class="container">
            <div class="aa-catg-head-banner-content">
                <h2>Product-Detail</h2>
                <ol class="breadcrumb">
                    <li><a href="@Url.Action("index","home")">Home</a></li>
                    <li><a href="#">Product</a></li>
                    <li class="active">Product-Detail</li>
                </ol>
            </div>
        </div>
    </div>
</section>
<!-- / catg header banner section -->
<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <!--Slide view-->
                            <div class="col-md-5 col-sm-5 col-xs-12">
                                <div class="aa-product-view-slider">
                                    <ul id="etalage">
                                        @foreach (var image in moreImage)
                                        {
                                            <li>
                                                <a href="#">
                                                    <img class="etalage_thumb_image" src="/Image/HinhSanPham/images/Product/@image" class="img-responsive" />
                                                    <img class="etalage_source_image" src="/Image/HinhSanPham/images/Product/@image" class="img-responsive" title="" />
                                                </a>
                                            </li>
                                        }
                                    </ul>
                                    <div class="clearfix"> </div>
                                </div>
                            </div>
                            <!--text view-->
                            <div class="col-md-7 col-sm-7 col-xs-12">
                                <div class="aa-product-view-content">
                                    <h4>@Model.NAME</h4>
                                    <div class="cart-b">
                                        <div class="left-n ">Giá tiền: $@Model.DISCOUNT_PRICE</div>
                                        <a class="now-get get-cart-in" href="/add-to-cart?productId=@Model.PRODUCT_ID&quantity=1">ADD TO CART</a>
                                        <div class="clearfix"></div>
                                    </div>
                                    <p class="aa-prod-category">
                                        Category: <a href="#" style="color:red; text-decoration:none">@Model.GROUPPRODUCT.NAME</a>
                                    </p>
                                    <div class="share">
                                        <h5>Share Product :</h5>
                                        <div>
                                            <div class="fb-like" data-href="https://localhost:48800/Product/ProductDetail/@Model.PRODUCT_ID" data-layout="standard" data-action="like" data-show-faces="false" data-share="true"></div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                            <div class=" single_top">
                                <div class="clearfix"> </div>
                                <script type="text/javascript">
                                    $(window).load(function () {
                                        $("#flexiselDemo1").flexisel({
                                            visibleItems: 5,
                                            animationSpeed: 1000,
                                            autoPlay: true,
                                            autoPlaySpeed: 3000,
                                            pauseOnHover: true,
                                            enableResponsiveBreakpoints: true,
                                            responsiveBreakpoints: {
                                                portrait: {
                                                    changePoint: 480,
                                                    visibleItems: 1
                                                },
                                                landscape: {
                                                    changePoint: 640,
                                                    visibleItems: 2
                                                },
                                                tablet: {
                                                    changePoint: 768,
                                                    visibleItems: 3
                                                }
                                            }
                                        });

                                    });
                                </script>
                                <script type="text/javascript" src="js/jquery.flexisel.js"></script>
                            </div>
                        </div>
                    </div>

                    <div class="aa-product-details-bottom">
                        <ul class="nav nav-tabs" id="myTab2">
                            <li><a href="#description" data-toggle="tab">Product Details</a></li>
                            <li><a href="#review" data-toggle="tab">Reviews</a></li>
                        </ul>

                        <!-- Tab panes -->
                        <div class="tab-content">
                            <div class="tab-pane fade in active" id="description">
                                <p class="m_text">@Html.Raw(@Model.DETAIL)</p>
                            </div>
                            <div class="tab-pane fade " id="review">
                                <div class="aa-product-review-area">
                                    <h2>Your comment, Our treasure</h2>
                                    <div class="fb-comments" data-href="http://localhost:48800/Product/ProductDetail/@Model.PRODUCT_ID" data-width="100%" data-colorscheme="light" data-numposts="5"></div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- Related product -->
                    <div class="aa-product-related-item">
                        <h3>Related Products</h3>
                        <ul class="aa-product-catg aa-related-item-slider">
                            @{Html.RenderAction("ProductRelated", "product");}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- / product category -->
